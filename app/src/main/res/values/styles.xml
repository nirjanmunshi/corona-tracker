<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="background">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.TextFont">
        <item name="fontFamily">@font/segoe_ui</item>
    </style>


    <style name="Widget.CoronaTracker.TextInputLayout.ExposedDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/TextAppearance.InstantSurvey.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="TextAppearance.InstantSurvey.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MainActivityHeadingText" parent="AppTheme.TextFont">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
    </style>

    <style name="MainActivityHeadingText.Large" parent="MainActivityHeadingText">
        <item name="android:textSize">@dimen/heading_text_size_large</item>
    </style>


    <style name="MainActivityContentText.Large" parent="MainActivityContentText">
        <item name="android:textSize">@dimen/value_text_size_large</item>
    </style>


    <style name="MainActivityContentText" parent="AppTheme.TextFont">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/value_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>






</resources>
